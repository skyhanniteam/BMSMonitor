<Application x:Class="SNet3.Monitor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:clr="clr-namespace:System;assembly=mscorlib"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             xmlns:local="clr-namespace:SNet3.Monitor"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="dxlc:LayoutControl">
            <Setter Property="Padding" Value="0,0,0,0"/>
        </Style>        
        <Style TargetType="TextBlock" x:Key="titleTextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="Maroon"/>
        </Style>
        <!--
        <clr:String x:Key="themeName">Office2016White</clr:String>
        <clr:String x:Key="themeName">Office2016BlackSE</clr:String>
        <clr:String x:Key="themeName">Office2016ColorfulSE</clr:String>
        <clr:String x:Key="themeName">Office2016WhiteSE</clr:String>
        -->
        <clr:String x:Key="themeName">Office2016WhiteSE</clr:String>
    </Application.Resources>
</Application>

